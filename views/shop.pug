extends layouts/main-layout.pug 

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main 
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title} 
                        div.card__image 
                            img(src="https://cdn.pixabay.com/photo/2021/08/25/20/42/field-6574455_960_720.jpg", alt="nature")
                        div.card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more 
                    .card__actions 
                        button.btn Add to Cart
        else 
            h1 No Products